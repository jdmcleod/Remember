-# locals: (entry:)

- if entry.journalable_type == 'Day'
  - if entry.journalable.be_real_memories.any?
    - memory = entry.journalable.be_real_memories.first
    rem-be-real-memory{
      date=memory.day.date
      primarySrc=rails_storage_proxy_path(memory.primary)
      secondarySrc=rails_storage_proxy_path(memory.secondary)
      disableExpand=true}

  - if entry.journalable.image.present?
    rem-be-real-memory{
      date=entry.journalable.date
      primarySrc=rails_storage_proxy_path(entry.journalable.image)
      disableExpand=true}
